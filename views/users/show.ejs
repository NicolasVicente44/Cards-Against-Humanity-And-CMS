<%- include("../shared/_header.ejs") %>

<div class="container mt-5">
  <h1>User Profile</h1>

  <hr class="my-5" />

  <a href="/users/<%= user.id %>/edit">Edit User</a>

  <div
    class="user ca-user mt-3 mb-3 <%= user.type === 'QUESTION' ? 'bg-dark text-white' : 'bg-white text-dark' %>"
    style="width: 18rem; min-height: 18rem"
  >
    <div class="user-body">
      <p class="user-text"><%= user.firstName %> <%= user.lastname %></p>
    </div>
  </div>
  <a href="/users">Back to Cards</a>
</div>

<%- include("../shared/footer.ejs") %>
