<%- include("../shared/_header.ejs") %>

<div class="container mt-5">
  <h1>Card View</h1>

  <hr class="my-5" />

  <a href="/cards/<%= card.id %>/edit">Edit Card</a>

  <div
    class="card ca-card mt-3 mb-3 <%= card.type === 'QUESTION' ? 'bg-dark text-white' : 'bg-white text-dark' %>"
    style="width: 18rem; min-height: 18rem;"
  >
    <div class="card-body">
      <p class="card-text">
        <%= card.content.replace(/\[blank\]/g, "_____") %>
      </p>
    </div>
  </div>
  <a href="/cards">Back to Cards</a>
</div>

<%- include("../shared/footer.ejs") %>
